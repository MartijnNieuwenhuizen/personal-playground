{
	"name": "website",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "yarn run read-gists && vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json --watch",
		"test": "npm run test:integration && npm run test:unit",
		"lint": "prettier --plugin-search-dir . --check . && eslint . && stylelint \"**/*.{css,scss}\"",
		"lint:style": "stylelint \"**/*.{css,scss}\"",
		"lint:style:fix": "stylelint \"**/*.{css,scss}\" --fix",
		"format": "prettier --plugin-search-dir . --write .",
		"format-silent": "prettier --loglevel silent --plugin-search-dir . --write .",
		"test:integration": "playwright test",
		"test:unit": "vitest",
		"experiment": "node ./generator/index && yarn run format-silent",
		"read-gists": "node read-gists.js"
	},
	"devDependencies": {
		"@playwright/test": "^1.28.1",
		"@sveltejs/adapter-auto": "^3.0.0",
		"@sveltejs/adapter-netlify": "^3.0.0",
		"@sveltejs/adapter-static": "^3.0.0",
		"@sveltejs/kit": "^2.5.27",
		"@sveltejs/vite-plugin-svelte": "^4.0.0",
		"@types/three": "^0.159.0",
		"eslint": "^8.28.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-svelte": "^2.45.1",
		"gray-matter": "^4.0.3",
		"inquirer": "^9.2.12",
		"prettier": "^3.1.0",
		"prettier-plugin-svelte": "^3.2.6",
		"sass": "^1.69.5",
		"stylelint": "^16.15.0",
		"stylelint-config-prettier": "^9.0.5",
		"stylelint-order": "^6.0.4",
		"stylelint-prettier": "^5.0.3",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"typescript": "^5.5.0",
		"vite": "^5.4.4",
		"vitest": "^1.0.0"
	},
	"type": "module",
	"dependencies": {
		"highlight.js": "^11.9.0",
		"jsdom": "^22.1.0",
		"mdsvex": "^0.11.0",
		"svelte-markdown": "^0.4.1",
		"three": "^0.159.0"
	},
	"packageManager": "yarn@4.6.0+sha256.eaf1eeabc164a44ca0b65dbdccd54af7e55f3ff9294b3ff318d5aaec92f2b20b"
}
